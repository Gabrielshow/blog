<!-- comments/_form.html.erb -->
<div class="comment-form-container">
    <h3>Leave a Comment</h3>
    <%= form_with model: [@article, @article.comments.build] do |form| %>
        <!-- Commenter Name -->
        <div>
            <%= form.label :commenter, "Your Name" %>
            <%= form.text_field :commenter, class: "form-control" %>
            <% @article.errors.full_messages_for(:commenter).each do |message| %>
                <div class="error-message"><%= message %></div>
            <% end %>
        </div>

        <!-- Comment Body -->
        <div>
            <%= form.label :body, "Your Comment" %>
            <%= form.text_area :body, rows: 4, class: "form-control" %>
            <% @article.errors.full_messages_for(:body).each do |message| %>
                <div class="error-message"><%= message %></div>
            <% end %>
        </div>

        <!-- Comment Status -->
        <div>
            <%= form.label :status, "Comment Status" %>
            <%= form.select :status, Visible::VALID_STATUSES, selected: 'public', class: "form-control" %>
        </div>

        <!-- Submit Button -->
        <div>
            <%= form.submit "Add Comment", class: "btn-submit" %>
        </div>
    <% end %>
</div>
